<% include nav.ejs %>
<% include select_date.ejs %>
<div class="row">
    <div class="col-lg-12">
        <div class="col-lg-1">
            <button name="day" id="day">日新增</button>
        </div>
        <div class="col-lg-1">
            <button name="week" id="week">周新增</button>
        </div>
        <div class="col-lg-1">
            <button name="month" id="month">月新增</button>
        </div>
        <% include save_print.ejs %>
    </div>
</div>

<script type="text/javascript">
//线型图表
$(function(){
    var day_active  = [90000,90000,98000,90000,97000,99000,90000,90000,98000,92000,97000,99000,90000,90000,98000,
        90000,97000,99000,90000,97000,98000,92000,97000,99000,92000,93000,96000,91000,94000,94000,92000];

    var day_labels = [];

    var data = [
        {
            name : '日新增用户数量',
            value:day_active,
            color:'#0d8ecf',
            line_width:2
        }
    ];

    for(var i=0;i<31;i++){
        day_labels[i] = i+1;
    }


    var line = new iChart.LineBasic2D({
        render : 'day_canvasDiv',
        data: data,
        align:'center',
        title : '日新增用户数量',
        subtitle : '每天新增的活跃用户人数(访问量单位：万)',
        footnote : '数据来源：日新增用户数量',
        width : 1100,
        height : 400,
        tip:{
            enable:true,
            shadow:true
        },
        legend : {
            enable : true,
            row:1,//设置在一行上显示，与column配合使用
            column : 'max',
            valign:'top',
            sign:'bar',
            background_color:null,//设置透明背景
            offsetx:-80,//设置x轴偏移，满足位置需要
            border : true
        },
        crosshair:{
            enable:true,
            line_color:'#62bce9'
        },
        sub_option : {
            label:false,
            point_hollow : false
        },
        coordinate:{
            width:900,
            height:240,
            axis:{
                color:'#9f9f9f',
                width:[0,0,2,2]
            },
            grids:{
                vertical:{
                    way:'share_alike',
                    value:30//割线
                }
            },
            scale:[{
                position:'left',
                start_scale:0,
                end_scale:120000,//设置结束刻度
                scale_space:20000,//设置刻度间距
                scale_size:2,
                scale_color:'#9f9f9f'

            },{
                position:'bottom',
                labels:day_labels
            }]
        }
    });

    //开始画图
    line.draw();
    $('#day').on('click',function(){
        //line.draw();
        $('.day_canvasDiv').css('display','block');
        $('.week_canvasDiv').css('display','none');
        $('.month_canvasDiv').css('display','none');
    });

    $('#week').on('click',function(){
        $('.day_canvasDiv').css('display','none');
        $('.week_canvasDiv').css('display','block');
        $('.month_canvasDiv').css('display','none');

        //应该是ajax获取数据
        //table 数据也要更新
        var week_labels = [];
        for(var i=0;i<52;i++){
            week_labels[i] = i+1;
        }
        var week_active = [90000,90000,98000,90000,97000,99000,90000,90000,98000,92000,97000,99000];
        var data = [
            {
                name : '周新增用户数量',
                value:week_active,
                color:'#0d8ecf',
                line_width:2
            }
        ];
        var line = new iChart.LineBasic2D({
            render : 'week_canvasDiv',
            data: data,
            align:'center',
            title : '周新增用户数量',
            subtitle : '每周新增的活跃人数(访问量单位：万)',
            footnote : '数据来源：周新增用户数量',
            width : 1100,
            height : 400,
            tip:{
                enable:true,
                shadow:true
            },
            legend : {
                enable : true,
                row:1,//设置在一行上显示，与column配合使用
                column : 'max',
                valign:'top',
                sign:'bar',
                background_color:null,//设置透明背景
                offsetx:-80,//设置x轴偏移，满足位置需要
                border : true
            },
            crosshair:{
                enable:true,
                line_color:'#62bce9'
            },
            sub_option : {
                label:false,
                point_hollow : false
            },
            coordinate:{
                width:900,
                height:240,
                axis:{
                    color:'#9f9f9f',
                    width:[0,0,2,2]
                },
                grids:{
                    vertical:{
                        way:'share_alike',
                        value:51//割线
                    }
                },
                scale:[{
                    position:'left',
                    start_scale:0,
                    end_scale:120000,//设置结束刻度
                    scale_space:20000,//设置刻度间距
                    scale_size:2,
                    scale_color:'#9f9f9f'

                },{
                    position:'bottom',
                    labels:week_labels
                }]
            }
        });
        line.draw();
    });


    $('#month').on('click',function(){
        $('.month_canvasDiv').css('display','block');
        $('.week_canvasDiv').css('display','none');
        $('.day_canvasDiv').css('display','none');
        //应该是ajax获取数据
        //table 数据也要更新
        var month_labels = [];
        for(var i=0;i<12;i++){
            month_labels[i] = i+1;
        }
        var month_active = [90000,90000,98000,90000,97000,99000,90000,90000,98000,92000,97000,99000];
        var data = [
            {
                name : '月新增用户数量',
                value:month_active,
                color:'#0d8ecf',
                line_width:2
            }
        ];
        var line = new iChart.LineBasic2D({
            render : 'month_canvasDiv',
            data: data,
            align:'center',
            title : '月新增用户数量',
            subtitle : '每月新增的活跃人数(访问量单位：万)',
            footnote : '数据来源：月新增用户数量',
            width : 1100,
            height : 400,
            tip:{
                enable:true,
                shadow:true
            },
            legend : {
                enable : true,
                row:1,//设置在一行上显示，与column配合使用
                column : 'max',
                valign:'top',
                sign:'bar',
                background_color:null,//设置透明背景
                offsetx:-80,//设置x轴偏移，满足位置需要
                border : true
            },
            crosshair:{
                enable:true,
                line_color:'#62bce9'
            },
            sub_option : {
                label:false,
                point_hollow : false
            },
            coordinate:{
                width:900,
                height:240,
                axis:{
                    color:'#9f9f9f',
                    width:[0,0,2,2]
                },
                grids:{
                    vertical:{
                        way:'share_alike',
                        value:12//割线
                    }
                },
                scale:[{
                    position:'left',
                    start_scale:0,
                    end_scale:120000,//设置结束刻度
                    scale_space:20000,//设置刻度间距
                    scale_size:2,
                    scale_color:'#9f9f9f'

                },{
                    position:'bottom',
                    labels:month_labels
                }]
            }
        });
        line.draw();
    });

});

</script>
