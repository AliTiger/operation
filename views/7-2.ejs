<!--用户推广成本-->
<% include nav.ejs %>
<% include select_date.ejs %>
<% include save_print.ejs %>

<script type="text/javascript">
    $(function(){
        //初始化标签
        $('#mark').val('/popularize');
        var labels = day_labels;
        var options = {
            render : 'columnmulti2d',
            labels:labels,
            title : '用户推广成本',
            subtitle : '单位:千',
            footnote : '数据来源：运营成本',
            width : 1400,
            height : 400,
            background_color : '#ffffff',
            legend:{
                enable:true,
                background_color : null,
                border : {
                    enable : false
                }
            },
            coordinate:{
                background_color : '#f1f1f1',
                scale:[{
                    position:'left',
                    start_scale:0,
                    end_scale:0,
                    scale_space:0
                }],
                width:1200,
                height:260
            }
        };
        $.ajax({
            url: '/popularize',
            type: 'get',
            dataType: 'json',
            async: false,
            success: function (result) {
                var data = [
                    {
                        name : '单个活跃用户推广成本',
                        value:result.active,
                        color:'#1385a5'
                    },
                    {
                        name : '单个付费用户推广成本',
                        value:result.charge,
                        color:'#c56966'
                    }
                ];
                options.data = data;
                var chart = new iChart.ColumnMulti2D(options);
                chart.draw();
                var html = "";
                if(result.active.length){
                    html += "<tr>";
                    html += "<td>单个活跃用户推广成本</td>";
                    result.active.forEach(function(a){
                        html += "<td>"+ a +"</td>";
                    });
                    html += "</tr>";
                }
                if(result.charge.length){
                    html += "<tr>";
                    html += "<td>单个付费用户推广成本</td>";
                    result.charge.forEach(function(a){
                        html += "<td>"+ a +"</td>";
                    });
                    html += "</tr>";
                }
                $('tbody').empty().html(html);
            }
        });



    });
</script>
<div class="col-lg-12">
    <div id='columnmulti2d'></div>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th></th>
            <% for(var i=1;i<32;i++){ %>
            <th><%=i%></th>
            <% } %>
        </tr>

        </thead>
        <tbody></tbody>
    </table>

</div>


