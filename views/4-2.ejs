<script type="text/javascript">
    //周回流用户数据
    $(function(){
        var active_user = [45,52,54,74,90,84,45,52,54,74,90,84,45,52,54,74,90,84,45,52,54,74,90,84,45,52,54,74,90,84,45,52,54,74,90,84,45,52,54,74,90,84,45,52,54,74,90,84,54,74,90,84];
