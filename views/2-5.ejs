<!--一次用户数量-->
<% include nav.ejs %>
<% include select_date.ejs %>
<div class="row">
    <div class="col-lg-12">
        <div class="col-lg-1">
            <button name="day" id="day">日一次</button>
        </div>
        <div class="col-lg-1">
            <button name="week" id="week">周一次</button>
        </div>
        <div class="col-lg-1">
            <button name="month" id="month">月一次</button>
        </div>
        <% include save_print.ejs %>
    </div>
</div>
<script type="text/javascript">
    //柱状图表 两段数据 上下
    $(function(){
        //初始化标签
        $('#mark').val('/onceUsers?option=day');
        var init = function(chart){
            //利用自定义组件构造左上侧单位
            chart.plugin(new iChart.Custom({
                drawFn:function(){
                    //计算位置
                    var coo = chart.getCoordinate(),
                            x = coo.get('originx'),
                            y = coo.get('originy');
                    //在左上侧的位置，渲染一个单位的文字
                    chart.target.textAlign('end')
                            .textBaseline('bottom')
                            .textFont('600 12px 微软雅黑')
                            .fillText('单位(个)',x,y-14,false,'#be5863')

                }
            }));
        }
        var options = {
            render : 'day_columntacked2d',
            data: '',
            labels:day_labels,
            title : {
                text:'日一次用户数及比例',
                color:'#dcd6cb',
                textAlign:'left',
                padding:'0 40',
                font:'微软雅黑',
                border:{
                    enable:true,
                    width:[0,0,4,0],
                    color:'#698389'
                },
                height:40
            },
            footnote : {
                text:'数据来源：日一次用户数及比例',
                font:'微软雅黑',
                padding:'0 8',
                color:'#dcd6cb'
            },
            padding:'8 0',
            width : 1800,
            height : 400,
            column_width:120,
            gradient : true,//应用背景渐变
            gradient_mode:'LinearGradientDownUp',//渐变类型
            color_factor : 0.1,//渐变因子
            background_color : '#425154',
            sub_option:{
                label:{color:'#f9f9f9',fontsize:12,fontweight:600},
                border : false
            },
            label:{color:'#dcd6cb',font:'微软雅黑',fontsize:12,fontweight:600},
            legend:{
                enable:true,
                background_color : null,
                line_height:25,
                color:'#dcd6cb',
                fontsize:12,
                font:'微软雅黑',
                fontweight:600,
                border : {
                    enable : false
                }
            },
            column_width:120,
            coordinate:{
                background_color : 0,
                grid_color:'#888888',
                axis : {
                    color : '#c0d0e0',
                    width : 0
                },
                scale:[{
                    position:'left',
                    scale_enable : false,
                    start_scale:0,
                    scale_space:20000,
                    end_scale:160000,
                    label:{color:'#dcd6cb',fontsize:11,fontweight:600}
                }],
                width:'80%',
                height:'76%'
            }
        };
        $.ajax({
            url: '/onceUsers?option=day',
            type: 'get',
            dataType: 'json',
            async: false,
            success: function (result) {
                var data = [
                    {
                        name : '新增用户',
                        value:result.day,
                        color:'#32bdbc'
                    },
                    {
                        name : '实际新增',
                        value:result.dayAver,
                        color:'#d75a5e'
                    }
                ];
                options.data = data;
                var chart = new iChart.ColumnStacked2D( options );
                init(chart);
                chart.draw();
            }
        });

        $('#day').on('click',function(){
            $('.day_columntacked2d').css('display','block');
            $('.week_columntacked2d').css('display','none');
            $('.month_columntacked2d').css('display','none');
        });
        $('#week').on('click',function(){
            $('.day_columntacked2d').css('display','none');
            $('.week_columntacked2d').css('display','block');
            $('.month_columntacked2d').css('display','none');
            //动态调用数据
            $.ajax({
                url:'/onceUsers?option=week',
                type:'get',
                dataType:'json',
                async:false,
                success:function( result ){
                    console.log('result:',result);
                    var data = [
                        {
                            name : '周一次用户数',
                            value:result.week,
                            color:'#32bdbc'
                        },
                        {
                            name : '周一次用户比例',
                            value:result.weekAver,
                            color:'#d75a5e'
                        }
                    ];
                    options.data = data;
                    options.render = 'week_columntacked2d';
                    options.labels = week_labels;
                    options.title.text = '周一次用户数及比例';
                    options.footnote.text = '数据来源：周一次用户数及比例';
                    var chart = new iChart.ColumnStacked2D( options );
                    init(chart);
                    chart.draw();

                    var html = "";
                    html += "<tr>";
                    html += "<td>周一次用户比例</td>";
                    if(result.week.length){
                        result.week.forEach(function(a){
                            html += "<td>"+ a +"</td>";
                        });
                    }
                    html += "</tr>";
                    html += "<tr>";
                    html += "<td>周一次用户数</td>";
                    if(result.weekAver.length){
                        result.weekAver.forEach(function(a){
                            html += "<td>"+ a +"</td>";
                        });
                    }
                    html += "</tr>";
                    html += "<tr>";
                    html += "<td>周新增用户数</td>";
                    if(result.week.length){
                        result.week.forEach(function(a){
                            html += "<td>"+ a +"</td>";
                        });
                    }
                    html += "</tr>";
                    $('tbody').empty().html(html);
                }
            });
        });
        $('#month').on('click',function(){
            $('.day_columntacked2d').css('display','none');
            $('.week_columntacked2d').css('display','none');
            $('.month_columntacked2d').css('display','block');

            //动态调用数据
            $.ajax({
                url:'/onceUsers?option=month',
                type:'get',
                dataType:'json',
                async:false,
                success:function( result ){
                    console.log('result:',result);
                    var data = [
                        {
                            name : '月一次用户数',
                            value:result.month,
                            color:'#32bdbc'
                        },
                        {
                            name : '月一次用户比例',
                            value:result.monthAver,
                            color:'#d75a5e'
                        }
                    ];
                    options.data = data;
                    options.render = 'month_columntacked2d';
                    options.labels = month_labels;
                    options.title.text = '月一次用户数及比例';
                    options.footnote.text = '数据来源：月一次用户数及比例';

                    var chart = new iChart.ColumnStacked2D( options );
                    init(chart);
                    chart.draw();
                    var html = "";
                    html += "<tr>";
                    html += "<td>月一次用户比例</td>";
                    if(result.month.length){
                        result.month.forEach(function(a){
                            html += "<td>"+ a +"</td>";
                        });
                    }
                    html += "</tr>";
                    html += "<tr>";
                    html += "<td>月一次用户数</td>";
                    if(result.monthAver.length){
                        result.monthAver.forEach(function(a){
                            html += "<td>"+ a +"</td>";
                        });
                    }
                    html += "</tr>";
                    html += "<tr>";
                    html += "<td>月新增用户数</td>";
                    if(result.month.length){
                        result.month.forEach(function(a){
                            html += "<td>"+ a +"</td>";
                        });
                    }
                    html += "</tr>";
                    $('tbody').empty().html(html);
                }
            });
        });
    });
</script>
<div class="col-lg-12">
    <div class="day_columntacked2d">
        <div id='day_columntacked2d'></div>
        <table class="table table-bordered">
            <thead>
            <tr>
                <th></th>
                <% for(var i=1;i<32;i++){ %>
                <th><%=i%></th>
                <% } %>
            </tr>

            </thead>
            <tbody>
            <tr>
                <td>日一次用户比例</td>
                <% day.forEach(function( a ){%>
                <td><%= a %></td>
                <%});%>
            </tr>
            <tr>
                <td>日一次用户数</td>
                <% day.forEach(function( a ){%>
                <td><%= a %></td>
                <%});%>
            </tr>
            <tr>
                <td>日新增用户数</td>
                <% day.forEach(function( a ){%>
                <td><%= a %></td>
                <%});%>
            </tr>
            </tbody>
        </table>
    </div>
    <div class="week_columntacked2d" style="display: none">
        <div id='week_columntacked2d'></div>
        <table class="table table-bordered">
            <thead>
            <tr>
                <th></th>
                <% for(var i=1;i<53;i++){ %>
                <th><%=i%></th>
                <% } %>
            </tr>

            </thead>
            <tbody></tbody>
        </table>
    </div>
    <div class="month_columntacked2d" style="display: none">
        <div id='month_columntacked2d'></div>
        <table class="table table-bordered">
            <thead>
            <tr>
                <th></th>
                <% for(var i=1;i<13;i++){ %>
                <th><%=i%></th>
                <% } %>
            </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>

</div>
<% include footer.ejs %>