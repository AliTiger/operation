<link rel="stylesheet" href="/css/ichartjs/demo.css" type="text/css"/>
<% include select_date.ejs %>
<div class="row">
    <div class="col-lg-12">
        <div class="col-lg-1">
            <button name="pay_user" id="pay_user">充值用户</button>
        </div>
        <div class="col-lg-1">
            <button name="pay_convert" id="pay_convert">付费转化</button>
        </div>
        <div class="col-lg-1">
            <button name="month" id="month">月均充值</button>
        </div>
        <div class="col-lg-1">
            <button name="loyal_pay" id="loyal_pay">忠实付费</button>
        </div>
        <div class="col-lg-1">
            <button name="eff_user" id="eff_user">高效用户</button>
