<script type="text/javascript">
    //线型图表
    $(function(){
        //初始化日期插件
        $("#datePicker").datepicker( dateOption );
        var options = {
            render : 'charge_user_canvasDiv',
            data:'',
            align:'center',
            title : '付费用户数量 新增付费数量',
            subtitle : '',
            footnote : '数据来源：充值用户统计',
            width : 1100,
            height : 400,
            tip:{
                enable:true,
                shadow:true
            },
            legend : {
                enable : true,
                row:1,//设置在一行上显示，与column配合使用
                column : 'max',
                valign:'top',
                sign:'bar',
                background_color:null,//设置透明背景
                offsetx:-80,//设置x轴偏移，满足位置需要
                border : true
            },
            crosshair:{
                enable:true,
                line_color:'#62bce9'
            },
            sub_option : {
                label:false,
                point_hollow : false
            },
            coordinate:{
                width:900,
                height:240,
                axis:{
                    color:'#9f9f9f',
                    width:[0,0,2,2]
                },
                grids:{
                    vertical:{
                        way:'share_alike',
                        value:11//割线
                    }
                },
                scale:[{
                    position:'left',
                    start_scale:0,
                    end_scale:120000,//设置结束刻度
                    scale_space:20000,//设置刻度间距
                    scale_size:2,
                    scale_color:'#9f9f9f'

                },{
                    position:'bottom',
                    labels:month_labels
                }]
            }
        };
        $.ajax({
            url: '/chargeCount?option=chargeUser',
            type: 'get',
            dataType: 'json',
            async: false,
            success: function (result) {
                var data = [
                    {
                        name : '付费用户数量',
                        value:result.data1,
                        color:'#0d8ecf',
                        line_width:2
                    },
                    {
                        name : '新增付费数量',
                        value:result.data2,
                        color:'#66FF33',
                        line_width:2
                    }
                ];
                options.data = data;
                options.render = 'charge_user_canvasDiv';
                options.title = '付费用户数量/新增付费数量';
                options.coordinate.grids.vertical.value = 11;
                options.coordinate.scale[1].labels = month_labels;
                var line = new iChart.LineBasic2D(options);
                //开始画图
                line.draw();
                var html = "";

                if(result.data1.length){
                    html += "<tr>";
                    html += "<td>付费用户数量</td>";
                    result.data1.forEach(function(a){
                        html += "<td>"+ a +"</td>";
                    });
                    html += "</tr>";
                }
                if(result.data2.length){
                    html += "<tr>";
                    html += "<td>新增付费数量</td>";
                    result.data2.forEach(function(a){
                        html += "<td>"+ a +"</td>";
                    });
                    html += "</tr>";
                }
                $('tbody').empty().html(html);
            }
        });
        $('#charge_user').on('click',function(){
            $('.charge_user_canvasDiv').css('display','block');
            $('.charge_convert_canvasDiv').css('display','none');
            $('.month_charge_canvasDiv').css('display','none');
            $('.loyal_charge_canvasDiv').css('display','none');
            $('.eff_user_canvasDiv').css('display','none');
            $('.first_charge_canvasDiv').css('display','none');
        });
        $('#charge_convert').on('click',function(){
            $('.charge_user_canvasDiv').css('display','none');
            $('.charge_convert_canvasDiv').css('display','block');
            $('.month_charge_canvasDiv').css('display','none');
            $('.loyal_charge_canvasDiv').css('display','none');
            $('.eff_user_canvasDiv').css('display','none');
            $('.first_charge_canvasDiv').css('display','none');
            $.ajax({
                url: '/chargeCount?option=convert',
                type: 'get',
                dataType: 'json',
                async: false,
                success: function (result) {
                    var data = [
                        {
                            name : '付费渗透比例',
