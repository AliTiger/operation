        var data = [
            {
                name : '用户充值金额',
                value:click,
                color:'#0d8ecf',
                line_width:2
            },
            {
                name : '用户消费金额',
                value:register,
                color:'#66FF33',
                line_width:2
            }
        ];
        var day_labels = [];
        var month_labels = [];

        for(var i=0;i<31;i++){
            day_labels[i] = i + 1;
        }

        for(var i=0;i<12;i++){
            month_labels[i] = i + 1;
        }
        var options = {
            render : 'day_canvasDiv',
            data: data,
            align:'center',
            title : '每日充值消费金额',
            subtitle : '每日的充值金额(访问量单位：万)',
            footnote : '数据来源：充值消费金额',
            width : 1100,
            height : 400,
            tip:{
                enable:true,
                shadow:true
            },
            legend : {
                enable : true,
                row:1,//设置在一行上显示，与column配合使用
                column : 'max',
                valign:'top',
                sign:'bar',
                background_color:null,//设置透明背景
                offsetx:-80,//设置x轴偏移，满足位置需要
                border : true
            },
            crosshair:{
                enable:true,
                line_color:'#62bce9'
            },
            sub_option : {
                label:false,
                point_hollow : false
            },
            coordinate:{
                width:900,
                height:240,
                axis:{
                    color:'#9f9f9f',
                    width:[0,0,2,2]
                },
                grids:{
                    vertical:{
                        way:'share_alike',
                        value:30//割线
                    }
                },
                scale:[{
                    position:'left',
                    start_scale:0,
                    end_scale:120000,//设置结束刻度
                    scale_space:20000,//设置刻度间距
                    scale_size:2,
                    scale_color:'#9f9f9f'

                },{
                    position:'bottom',
                    labels:day_labels
                }]
            }
        };
        var line = new iChart.LineBasic2D( options );


        //开始画图
        line.draw();
        $('#day_line').on('click',function(){
            $('.day_line').css('display','block');
            $('.day_data').css('display','none');
            $('.month_line').css('display','none');
            $('.month_data').css('display','none');

        });
        $('#day_data').on('click',function(){
            $('.day_line').css('display','none');
            $('.day_data').css('display','block');
            $('.month_line').css('display','none');
            $('.month_data').css('display','none');

        });
        $('#month_line').on('click',function(){
            $('.day_line').css('display','none');
            $('.day_data').css('display','none');
            $('.month_line').css('display','block');
            $('.month_data').css('display','none');
            options.render = 'month_canvasDiv';
            options.title = '每月充值和消费金额';
            options.coordinate.grids.vertical.value = 11;
            options.coordinate.scale[1].labels = month_labels;
            var line = new iChart.LineBasic2D( options );

            //开始画图
            line.draw();
        });
        $('#month_data').on('click',function(){
            $('.day_line').css('display','none');
            $('.day_data').css('display','none');
            $('.month_line').css('display','none');
            $('.month_data').css('display','block');

        });


    });

</script>
