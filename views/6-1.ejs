<script type="text/javascript">
    //线型图表
    $(function(){
        labels();//调用labels day_labels week_labels month_labels
        var click    = [90000,90000,98000,90000,97000,99000,90000,90000,98000,92000,97000,99000,90000,90000,98000,90000,97000,99000,90000,97000,98000,92000,97000,99000,92000,93000,96000,91000,94000,94000,92000],
            register = [70000,78000,90000,87000,89000,78000,78000,90000,87000,76000,78000,90000,70000,78000,90000,87000,89000,78000,78000,90000,87000,76000,78000,90000,70000,78000,90000,87000,89000,78000,78000];

        var data = [
            {
                name : '每日用户充值金额',
                value:click,
                color:'#0d8ecf',
                line_width:2
            },
            {
                name : '每日用户消费金额',
                value:register,
                color:'#66FF33',
                line_width:2
            }
        ];

        var options = {
            render : 'day_canvasDiv',
            data: data,
            align:'center',
            title : '每日充值消费金额',
            subtitle : '',
            footnote : '数据来源：充值消费金额',
            width : 1100,
            height : 400,
            tip:{
                enable:true,
                shadow:true
            },
            legend : {
                enable : true,
                row:1,//设置在一行上显示，与column配合使用
                column : 'max',
                valign:'top',
                sign:'bar',
                background_color:null,//设置透明背景
                offsetx:-80,//设置x轴偏移，满足位置需要
                border : true
            },
            crosshair:{
                enable:true,
                line_color:'#62bce9'
            },
            sub_option : {
                label:false,
                point_hollow : false
            },
            coordinate:{
                width:900,
                height:240,
                axis:{
                    color:'#9f9f9f',
                    width:[0,0,2,2]
                },
                grids:{
                    vertical:{
                        way:'share_alike',
                        value:30//割线
                    }
                },
                scale:[{
                    position:'left',
                    start_scale:0,
                    end_scale:120000,//设置结束刻度
                    scale_space:20000,//设置刻度间距
                    scale_size:2,
                    scale_color:'#9f9f9f'

                },{
                    position:'bottom',
                    labels:day_labels
                }]
            }
        };
        $.ajax({
            url: '/chargeConsume?option=day_line',
            type: 'get',
            dataType: 'json',
            async: false,
            success: function (result) {
                var data = [
                    {
                        name : '每日用户充值金额',
                        value:result.charge,
                        color:'#0d8ecf',
                        line_width:2
                    },
                    {
                        name : '每日用户消费金额',
                        value:result.consume,
                        color:'#66FF33',
                        line_width:2
                    }
                ];
                options.data = data;
                options.render = 'day_canvasDiv';
                options.title = '每日充值和消费金额';
                options.coordinate.grids.vertical.value = 30;
                options.coordinate.scale[1].labels = day_labels;
                var line = new iChart.LineBasic2D( options );

                //开始画图
                line.draw();
            }
        });

        $('#day_line').on('click',function(){
            $('.day_line').css('display','block');
            $('.day_data').css('display','none');
            $('.month_line').css('display','none');
            $('.month_data').css('display','none');
        });
        $('#day_data').on('click',function(){
            $('.day_line').css('display','none');
            $('.day_data').css('display','block');
            $('.month_line').css('display','none');
            $('.month_data').css('display','none');
            $.ajax({
                url: '/chargeConsume?option=day_data',
                type: 'get',
                dataType: 'json',
                async: false,
                success: function (result) {
                    console.log('result:',result);
                    var html = "";

                    if(result.data.length){
                        result.data.forEach(function( data ){
                            html += "<tr>";
                            html += "<td>"+ data.server +"</td>";
                            html += "<td>"+ data.a +"</td>";
                            html += "<td>"+ data.b +"</td>";
                            html += "<td>"+ data.c +"</td>";
                            html += "<td>"+ data.d +"</td>";
                            html += "<td>"+ data.e +"</td>";
                            html += "<td>"+ data.f +"</td>";
                            html += "<td>"+ data.g +"</td>";
                            html += "<td>"+ data.total +"</td>";
                            html += "</tr>";
                        });
                    }
                    $('tbody').empty().html(html);
                }
            });

        });
        $('#month_line').on('click',function(){
            $('.day_line').css('display','none');
            $('.day_data').css('display','none');
            $('.month_line').css('display','block');
            $('.month_data').css('display','none');

            $.ajax({
                url: '/chargeConsume?option=month_line',
                type: 'get',
                dataType: 'json',
                async: false,
                success: function (result) {
                    var data = [
                        {
                            name : '每月用户充值金额',
                            value:result.charge,
                            color:'#0d8ecf',
                            line_width:2
                        },
                        {
                            name : '每月用户消费金额',
                            value:result.consume,
                            color:'#66FF33',
                            line_width:2
                        }
                    ];
                    options.data = data;
                    options.render = 'month_canvasDiv';
                    options.title = '每月充值和消费金额';
                    options.coordinate.grids.vertical.value = 11;
                    options.coordinate.scale[1].labels = month_labels;
                    var line = new iChart.LineBasic2D( options );

                    //开始画图
                    line.draw();
                }
            });
        });
        $('#month_data').on('click',function(){
            $('.day_line').css('display','none');
            $('.day_data').css('display','none');
            $('.month_line').css('display','none');
            $('.month_data').css('display','block');
            $.ajax({
                url: '/chargeConsume?option=month_data',
                type: 'get',
                dataType: 'json',
                async: false,
                success: function (result) {
                    console.log('result:',result);
                    var html = "";

                    if(result.data.length){
                        result.data.forEach(function( data ){
                            html += "<tr>";
                            html += "<td>"+ data.server +"</td>";
                            html += "<td>"+ data.a +"</td>";
                            html += "<td>"+ data.b +"</td>";
                            html += "<td>"+ data.c +"</td>";
                            html += "<td>"+ data.d +"</td>";
                            html += "<td>"+ data.e +"</td>";
                            html += "<td>"+ data.f +"</td>";
                            html += "<td>"+ data.total +"</td>";
                            html += "</tr>";
                        });
                    }
                    $('tbody').empty().html(html);
                }
            });
        });


    });

</script>
