<div class="col-lg-12">
    <h3 align="center">用户充值排名</h3>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>排名</th>
            <th>名称</th>
            <th>充值金额</th>
        </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
<script type="text/javascript">
    $(function(){
        $.ajax({
            url: '/chargeRank',
            type: 'get',
            dataType: 'json',
            async: false,
            success: function (result) {
                var rank = result.data;
                var html = "";
                if(rank.length){
                    rank.forEach(function(a){
                        html += "<tr>";
                        html += "<td>"+ a.rank +"</td>";
                        html += "<td>"+ a.name +"</td>";
                        html += "<td>"+ a.chargeValue +"</td>";
                        html += "</tr>";
                    });
                }
                $('tbody').empty().html(html);
            }
        });
    });

</script>
