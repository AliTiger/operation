<!--投入产出比值-->
<% include nav.ejs %>
<% include select_date.ejs %>
<% include save_print.ejs %>

<script type="text/javascript">
    $(function(){
        var labels = [];
        for(var i=0;i<31;i++){
            labels[i] = i + 1;
        }
        var options = {
            render : 'columnmulti2d',
            data: '',
            labels:labels,
            title : '投入产出',
            subtitle : '单位:千',
            footnote : '数据来源：运营成本',
            width : 1400,
            height : 400,
            background_color : '#ffffff',
            legend:{
                enable:true,
                background_color : null,
                border : {
                    enable : false
                }
            },
            coordinate:{
                background_color : '#f1f1f1',
                scale:[{
                    position:'left',
                    start_scale:0,
                    end_scale:0,
                    scale_space:0
                }],
                width:1200,
                height:260
            }
        };
        $.ajax({
            url: '/inputOutput',
            type: 'get',
            dataType: 'json',
            async: false,
            success: function (result) {
                var data = [
                    {
                        name : '成本',
                        value:result.input,
                        color:'#1385a5'
                    },
                    {
                        name : '产出',
                        value:result.output,
                        color:'#c56966'
                    }
                ];
                options.data = data;
                var chart = new iChart.ColumnMulti2D(options);
                chart.draw();

                var html = "";
                if(result.input.length){
                    html += "<tr>";
                    html += "<td>成本</td>";
                    result.input.forEach(function(a){
                        html += "<td>"+ a +"</td>";
                    });
                    html += "</tr>";
                }
                if(result.output.length){
                    html += "<tr>";
                    html += "<td>产出</td>";
                    result.output.forEach(function(a){
                        html += "<td>"+ a +"</td>";
                    });
                    html += "</tr>";
                }
                if(result.output.length){
                    html += "<tr>";
                    html += "<td>投入产出比值</td>";
                    result.output.forEach(function(a){
                        html += "<td>"+ a +"</td>";
                    });
                    html += "</tr>";
                }
                $('tbody').empty().html(html);
            }
        });
    });
</script>
<div class="col-lg-12">
    <div id='columnmulti2d'></div>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th></th>
            <% for(var i=1;i<32;i++){ %>
            <th><%=i%></th>
            <% } %>
        </tr>

        </thead>
        <tbody></tbody>
    </table>

</div>


